{
	".source.tiger": {
		"editor": {
			"commentStart": "/* ",
			"commentEnd": " */",
			"foldEndPattern": "^\\s*(\\)|\\]|\\}|\\bend\\b)",
			"increaseIndentPattern": "(\\(|\\[|\\{|\\b(do|else|for|if|in|let|then|while)\\b)\\s*$",
			"decreaseIndentPattern": "^\\s*(\\)|\\]|\\}|\\b(do|else|end|in|then)\\b)"
		}
	},
	"comments": {
		"blockComment": [
			"/*",
			"*/"
		]
	},
	"folding": {
		"markers": {
			"end": "^\\s*(\\)|\\]|\\}|\\bend\\b)"
		}
	},
	"indentationRules": {
		"increaseIndentPattern": "(\\(|\\[|\\{|\\b(do|else|for|if|in|let|then|while)\\b)\\s*$",
		"decreaseIndentPattern": "^\\s*(\\)|\\]|\\}|\\b(do|else|end|in|then)\\b)"
	}
}
